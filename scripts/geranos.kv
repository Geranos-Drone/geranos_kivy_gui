<Container>
	BoxLayout:
		orientation: 'vertical'

		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, 0.2

			Image:
				source: 'logo_white_notext.png'
				pos_hint: {'left': 1, 'top': 1}
				size_hint: None, None
				size: self.size
				halign: 'left'

			BoxLayout:
				orientation: 'vertical'
				padding: 20, 0, 20, 0

				Label:
					id: msf_checker
					text: 'No Odometry recieved'
					text_size: self.size
					halign: 'right'
					valign: 'middle'

				Label:
					id: imu_checker
					text: 'No IMU message recieved'
					text_size:self.size
					halign: 'right'
					valign: 'middle'

				Label:
					id: vicon_checker
					text: 'No Vicon message recieved'
					text_size:self.size
					halign: 'right'
					valign: 'middle'

				Label:
					id: control_checker
					text: 'Controller not sending Motorspeeds'
					text_size:self.size
					halign: 'right'
					valign: 'middle'
				
		BoxLayout:
			orientation: 'horizontal'

			size_hint: 1, 0.6
			BoxLayout:
				orientation: 'vertical'

				#Sliders
				BoxLayout:
					orientation: 'horizontal'

					Button:
						disabled: True
						id: reset_wp
						text: 'Reset'
						on_press: root.reset_wp()

					Button:
						disabled: True
						id: publish_wp
						text: 'Publish Waypoints' 
						on_press: root.publish_wp()

				BoxLayout: 
					Label:
						size_hint: 0.1, 1
						text: 'x'

					Button: 
						id: minus_x
						text: '-'
						size_hint: 0.1, 1
						on_press: x.value = x.value - 0.1

					Slider: 
						id: x
						min: -5
						max: 5
						step: 0.1
						orientation: 'horizontal'

					Button: 
						id: plus_x
						text: '+'
						size_hint: 0.1, 1
						on_press: x.value = x.value + 0.1

					TextInput:
						id: text_x
						size_hint: 0.1, 1 
						text: str(round(x.value, 2))
						font_size: 16 
						multiline: False
						on_text_validate: root.text_x()
						text_size: self.size
                		halign: 'center'
                		valign: 'middle' 

				BoxLayout:

					Label:
						size_hint: 0.1, 1
						text: 'y' 

					Button: 
						id: minus_y
						text: '-'
						size_hint: 0.1, 1		
						on_press: y.value = y.value - 0.1

					Slider: 
						id: y
						min: -5
						max: 5
						step: 0.1
						orientation: 'horizontal'

					Button: 
						id: plus_y
						text: '+'
						size_hint: 0.1, 1
						on_press: y.value = y.value + 0.1		

					TextInput:
						id: text_y
						size_hint: 0.1, 1 
						text: str(round(y.value, 2)) 
						font_size: 16
						multiline: False
						on_text_validate: root.text_y()
						text_size: self.size
                		halign: 'center'
                		valign: 'middle'

				BoxLayout:

					Label:
						size_hint: 0.1, 1
						text: 'z' 

					Button: 
						id: minus_z
						text: '-'
						size_hint: 0.1, 1	
						on_press: z.value = z.value - 0.1

					Slider: 
						id: z
						min: -5
						max: 5
						step: 0.1
						orientation: 'horizontal'

					Button: 
						id: plus_z
						text: '+'
						size_hint: 0.1, 1	
						on_press: z.value = z.value + 0.1

					TextInput:
						id: text_z
						size_hint: 0.1, 1 
						text: str(round(z.value, 2)) 
						font_size: 16
						multiline: False
						on_text_validate: root.text_z()
						text_size: self.size
                		halign: 'center'
                		valign: 'middle'

				BoxLayout: 

					Label:
						size_hint: 0.1, 1
						text: 'yaw' 

					Button: 
						id: minus_yaw
						text: '-'
						size_hint: 0.1, 1	
						on_press: yaw.value = yaw.value - 5

					Slider: 
						id: yaw
						min: -250
						max: 250
						step: 1
						orientation: 'horizontal'
						on_touch_up: root.silder_x()

					Button: 
						id: plus_yaw
						text: '+'
						size_hint: 0.1, 1
						on_press: yaw.value = yaw.value + 5

					TextInput:
						id: text_yaw
						size_hint: 0.1, 1 
						text: str(round(yaw.value, 2)) 
						font_size: 16
						multiline: False
						on_text_validate: root.text_yaw()
						text_size: self.size
                		halign: 'center'
                		valign: 'middle'

			#Buttons

			BoxLayout:
				orientation: 'vertical'
				padding: 20, 0, 20, 0
				spacing: 20


				BoxLayout:
					orientation: 'horizontal'
					spacing: 20

					Button:
						id: init
						text: 'INIT MSF'
						on_release: root.init()
						color: 1,1,1,1
						background_color: 205/205, 34/255, 34/255,1

					Button:
						id: switch
						text: 'Switch'
						on_press: root.switch()

					Button:
						disabled: True
						id: start
						text: 'Start'
						on_press: root.start()

					Button:
						disabled: True
						id: takeoff
						text: 'Take Off'
						on_press: root.takeoff()

					Button:
						id: GrabPole
						text: 'Grab Pole'
						on_press: root.GrabPole()

					Button:
						disabled: True
						id: lower
						text: 'Lower to\nPole'
						halign: 'center'	
						on_press: root.lower()

					Button:
						disabled: True
						id: lift_pole
						text: 'Lift Pole'
						on_press: root.lift_pole()

				BoxLayout:
					orientation: 'horizontal'
					spacing: 20 

					BoxLayout:
						orientation: 'vertical'
						Label:
							id: MSFmessage
							font_size: '16sp'
							text: 'MSF not reset.'

						Label:
							id: StatusMessage
							font_size: '16sp'
							text: 'State Machine Status'
							halign: 'center'

					Label:
						id: modeControl
						font_size: '16sp'
						text: 'Mode of Controller'

					Button:
						disabled: True
						id: backToPos
						text: 'Back to\nPosition Hold'
						halign: 'center'
						on_press: root.backToPos()

					Button:
						disabled: True
						id: land
						text: 'Land'
						on_press: root.land()

					Button:
						disabled: True
						id: GoTo
						text: 'Go To Pole'
						on_press: root.GoTo()
					
					Label:
						id: modeTraj
						font_size: '16sp'
						text: 'Trajectory Mode'
						halign: 'center'

					Button:
						id: reset
						text: 'RESET'
						on_press: root.reset()

		BoxLayout:
			orientation: 'horizontal'
			padding: 20, 0, 20, 0
			size_hint: 1, 0.1

			Label:
				id: console
				text: 'Console:'
				text_size: self.size
				font_size: '24sp'
				halign: 'left'
				valign: 'middle'

			Label:
				size_hint: 0.2, 1
				id: battery
				text: 'Battery V = n/A'
				text_size: self.size
				halign: 'right'
				valign: 'middle'

<Label>:
	font_size: '18sp'

<Button>:
	background_normal: ''
	background_color: 120/255, 120/255, 120/255, 1
	font_size: '18sp'
	#on_press: self.background_color = (0/255, 0/255, 0/255, 1)
	#on_release: self.background_color = (120/255, 120/255, 120/255, 1)

<Slider>:
	cursor_image: 'Cursor.png'
